<?xml version="1.0" encoding="UTF-8"?>
<web-app id="WebApp_ID" version="2.4"
	xmlns="http://java.sun.com/xml/ns/j2ee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">
	<display-name>computer-database</display-name>

	<!-- first Servlet mapping -->
	<servlet>
		<servlet-name>firstServlet</servlet-name>
		<servlet-class>com.excilys.controllers.ComputerController</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>firstServlet</servlet-name>
		<url-pattern>/controller</url-pattern>
	</servlet-mapping>

	<!-- Delete computers -->
	<servlet>
		<servlet-name>DeleteComputerController</servlet-name>
		<servlet-class>com.excilys.controllers.DeleteComputerController</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>DeleteComputerController</servlet-name>
		<url-pattern>/deletecomputer</url-pattern>
	</servlet-mapping>

	<!--Add computer servlet mapping -->
	<servlet>
		<servlet-name>AddComputerController</servlet-name>
		<servlet-class>com.excilys.controllers.AddComputerController</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>AddComputerController</servlet-name>
		<url-pattern>/addcomputer</url-pattern>
	</servlet-mapping>

	<!-- dashboard servlet mapping -->
	<servlet>
		<servlet-name>DashboardController</servlet-name>
		<servlet-class>com.excilys.controllers.DashboardController</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>DashboardController</servlet-name>
		<url-pattern>/dashboard</url-pattern>
	</servlet-mapping>

	<!-- edit computer servlet mapping -->
	<servlet>
		<servlet-name>EditComputerController</servlet-name>
		<servlet-class>com.excilys.controllers.EditComputerController</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>EditComputerController</servlet-name>
		<url-pattern>/editComputer</url-pattern>
	</servlet-mapping>
</web-app>
